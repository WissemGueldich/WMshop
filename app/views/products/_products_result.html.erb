<% if products.present? %>
  <% products.each do |product| %>
    <%= link_to product_path(product), class: "no-text-decoration normal-color" do %>
      <div class="search-result-item"><%= product.title %></div>
    <% end %>
  <% end %>
<% else %>
  <div class="p-3">
    No results found.
  </div>
<% end %>