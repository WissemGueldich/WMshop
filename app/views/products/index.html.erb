<h2> 
    <%= link_to "categories", root_path %> /
    <%= @category.title %> /
    Products
</h2>

<ol>
    <% @products.each do |product| %>
        <li> 
            <%= product.title %>
            <%=  image_tag product %>
            <%= product.description %>
            <strong> <%= number_to_currency product.price %></strong>

            <%= form_tag order_items_path do %>
                <%= hidden_field_tag :product_id, product.id %>
                <%= number_field_tag :quantity, 1%>
                <%= submit_tag 'add to cart' %>
            <% end %>
            <%= button_to "Buy Now!", checkout_create_path, params: { id: product.id }, remote: true, data: {disable_with: "Validating ..."} %>
        </li>
    <% end %>
</ol>