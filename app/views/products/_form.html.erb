<div class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
            <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900"><%= type %> product</h3>
            </div>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
        <%= form_with model: @product, html: {multipart: true}  do |f|%>
                <div class="shadow sm:rounded-md sm:overflow-hidden">
                    <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                        <div class="grid grid-cols-3 gap-6">
                            <div class="col-span-6 sm:col-span-3">
                                <%= f.label :title, class:"block text-sm font-medium text-gray-700" %> 
                                <%= f.text_field :title , class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md bg-gray-100 sec p-3 h-30  border border-gray-300 outline-none " %>

                            </div>
                        </div>

                        <div>
                            <label for="about" class="block text-sm font-medium text-gray-700">
                                Description
                            </label>
                            <div class="mt-1">
                            <%= f.text_area :description , class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md bg-gray-100 sec p-3 h-30  border border-gray-300 outline-none"%>
                            </div>
                        </div>

                        <div>
                            <%=f.label :image, class:"block text-sm font-medium text-gray-700"%>
                            <%= f.file_field :image %>
                        </div>

                        <div>
                            <%=f.label "Ad image", class:"inline text-sm font-medium text-gray-700"%> <p class='inline text-xs text-gray-500'>(optional)</p>
                            <%= f.file_field :ad, class: "block" %>
                        </div>

                        <div>
                          Show this product in the slideshow
                          <%= f.check_box :show_ad, {:class=>"mx-2"}, "true", "false" %>
                        </div>

                        <div>
                          <label for="about" class="block text-sm font-medium text-gray-700">
                            Price
                          </label>
                            <%= f.text_field :price, class:'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md bg-gray-100 sec p-3 h-30  border border-gray-300 outline-none' %>
                        </div>


                        <div>
                            <%= f.text_field :category_id,value: params[:id], class:'hidden' %>
                        </div>

                    </div>
                    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                      <%= f.submit "Save Product", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: {disable_with: "Validating ..."}%>
                    </div>
                </div>
            <%end%>
        </div>
        <%= link_to 'Back', category_products_path(Category.find(params[:id])), class:"text-center flex w-20 justify-center mx-2 text-sm bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline" %>
    </div>
</div>
