<div class="w-full text-gray-700 md:text-center text-2xl font-semibold">
    Categories (<%= @categories.length %>)</h2>
</div> 

 <div class="flex grid grid-cols-3 gap-4 mt-6">

    <% @categories.each do |category| %>
        <div class=" rounded-lg py-3 px-6 bg-red-300">
            <%= link_to category_products_path(category) do %>
                <%= category.title %>
            <% end %>
        </div>
    <% end %>

</div>

