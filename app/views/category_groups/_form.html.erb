
<div class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
  <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="mt-5 md:mt-0 md:col-span-2">
          <%= form_with(model: category_group)  do |f|%>
              <div class="shadow sm:rounded-md sm:overflow-hidden">
                  <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                      <div class="grid grid-cols-3 gap-6">
                          <div class="col-span-6 sm:col-span-3">
                              <%= f.label :name, class:"block text-sm font-medium text-gray-700 mb-5" %> 
                              <%= f.text_field :name , class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md bg-gray-100 sec p-3 h-30  border border-gray-300 outline-none " %>
                          </div>
                      </div>
                  </div>
                  <%= f.number_field :over_category_id , class:"hidden", value:id %>
                  <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                      <%= f.submit "Save Sub-Category", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: {disable_with: "Validating ..."}%>
                  </div>
              </div>
          <%end%>
      </div>
  </div>
</div>

