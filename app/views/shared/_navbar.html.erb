<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
<div class="font-mono bg-gray-100 ">
    <div class=" min-w-screen w-screen text-gray-700 bg-white">
        <div x-data="{ open: true }" class="flex flex-col px-0 mx-auto md:items-center md:justify-between md:flex-row md:px-2 lg:px-3">
            <div class="flex flex-row items-center justify-between px-2 py-1">
                <a href="/" class="text-lg font-semibold tracking-widest text-gray-900 uppercase rounded-lg focus:outline-none focus:shadow-outline"><%=image_tag "logo.jpg", width:"200px", class:"rounded" %></a>
                <button class="rounded-lg md:hidden focus:outline-none focus:shadow-outline" @click="open = !open">
                <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
                    <path x-show="!open" fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    <path x-show="open" fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
                </button>
            </div>
            <nav :class="{'flex': open, 'hidden': !open}" class="flex-col px-4 hidden pb-4 md:pb-0 md:flex md:justify-end md:flex-row">
                <div class="group items-center py-2 bg-transparent rounded-lg md:mt-0 md:ml-2 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">
                    <button class="flex items-center px-2 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" >
                        <span class="pr-1 font-semibold flex-1">Categories</span>
                        <span>
                            <svg class="fill-current h-4 w-4 transform group-hover:-rotate-180 transition duration-150 ease-in-out" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" >
                            <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                            </svg>
                        </span>
                    </button>
                    <ul class="font-sans rounded-md mt-4 bg-white border transform scale-0 group-hover:scale-100 absolute transition duration-500 ease-in-out origin-top min-w-32" >
                        <% over_categories.each do |oc| %>
                            <% if oc.subcategories.length == 0 %>
                                <li class="py-3 rounded-sm px-3 hover:bg-gray-100"><%= oc.name %></li>
                            <% else %> 
                                <li class="py-3 rounded-sm relative px-3 hover:bg-gray-100">
                                    <button class="w-full text-left flex items-center outline-none focus:outline-none" >
                                        <span class="pr-1 flex-1"><%= oc.name %></span>
                                        <span class="mr-auto">
                                            <svg class="fill-current h-4 w-4 transition duration-150 ease-in-out" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" >
                                                <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                                            </svg>
                                        </span>
                                    </button>
                                    <ul class="bg-white border rounded-sm absolute top-0 right-0 transition duration-150 ease-in-out origin-top-left min-w-32" >
                                        <% oc.subcategories.each do |categoryGroup| %>
                                            <% if categoryGroup.categories.length == 0 %>
                                                <li class="py-3 px-3 hover:bg-gray-100"><%= categoryGroup.name %></li>
                                            <% else %> 
                                                <li class="py-3 rounded-sm relative px-3 hover:bg-gray-100">
                                                    <button class="w-full text-left flex items-center outline-none focus:outline-none">
                                                        <span class="pr-1 flex-1"><%= categoryGroup.name %></span>
                                                        <span class="mr-auto">
                                                            <svg class="fill-current h-4 w-4 transition duration-150 ease-in-out" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" >
                                                                <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                                                            </svg>
                                                        </span>
                                                    </button>
                                                    <ul class="bg-white border rounded-sm absolute top-0 right-0 transition duration-150 ease-in-out origin-top-left min-w-32" >
                                                        <% categoryGroup.categories.each do |category| %>
                                                            <%= link_to category_products_path(category.id) do %>
                                                                <li class="py-3 px-3 hover:bg-gray-100">
                                                                    <%= category.title %>
                                                                </li>
                                                            <% end %>        
                                                        <% end %>
                                                    </ul>
                                                </li>
                                            <% end %>    
                                        <% end %>
                                    </ul>
                                </li>
                            <% end %>
                        <% end %>
                    </ul>
                  <style>
                    li>ul                 { transform: translatex(100%) scale(0) }
                    li:hover>ul           { transform: translatex(101%) scale(1) }
                    li > button svg       { transform: rotate(-90deg) }
                    li:hover > button svg { transform: rotate(-270deg) }
                    .group:hover .group-hover\:scale-100 { transform: scale(1) }
                    .group:hover .group-hover\:-rotate-180 { transform: rotate(180deg) }
                    .scale-0 { transform: scale(0) }
                    .min-w-32 { min-width: 8rem }
                  </style>
                </div>
                <%= form_with url: search_path, local: true, method: :get, html: { class: "w-96 min-w-96 block lg:inline-block lg:mt-0 lg:ml-4 align-middle text-black px-2 py-2 mt-2 font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 focus:outline-none focus:shadow-outline text-gray-600 focus:outline-none mx-4 sm:mx-0 flex items-center relative text-gray-600 " } do |form| %>
                    <%= form.text_field :q, placeholder: "Search for a product ", data: { behavior: "autocomplete" }, class: " w-full bg-transparent h-10 px-5 rounded-full hover:bg-gray-200 text-sm focus:outline-none" %>
                    <%= form.button class: "hidden" %>
                <% end %>
                <% if current_user %>
                    <% if current_user.admin %>
                        <%= link_to "Add Product", new_product_path, class: "flex items-center px-2 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>                            
                        <%= link_to "Add Category", new_category_path, class: "flex items-center px-2 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>                            
                        <%= link_to "Client Support", rooms_path, class: "flex items-center px-2 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>
                    <% end %>
                    <div @click.away="open = false" class="z-10 relative" x-data="{ open: false }">
                        <button @click="open = !open" class="h-full flex items-center flex-row text-gray-900 items-center w-full px-2 py-1 mt-2 text-sm font-semibold bg-transparent text-center rounded-lg md:w-auto md:inline md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">
                            <% if current_user.avatar.attached? %>
                                <%= image_tag user_avatar(current_user,40), class: "h-15 w-15 inline rounded-full" %>
                            <% else %>
                                <%= current_user.email %>
                            <% end %>
                            <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 mt-1 ml-1 transition-transform duration-200 transform md:-mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </button>
                        <div x-show="open" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 w-full mt-1 origin-top-right rounded-md shadow-lg md:w-48">
                            <div class="px-2 py-2 bg-white rounded-md shadow ">
                                <%= link_to "Edit Account" ,edit_user_registration_path, class: "block px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>
                                <%= link_to "My Orders" ,history_path, class: "block px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>
                                <%= link_to "Sign Out",destroy_user_session_path, method: :delete, class: "block px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>
                            </div>
                        </div>  
                    </div>
                <% else %>
                    <%= link_to "Sign In", new_user_session_path, class: "flex items-center px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>
                    <%= link_to "Sign Up",new_user_registration_path, class: "flex items-center px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" %>
                <% end %>
                <div x-data="{ cartOpen: false , isOpen: false }" class="bg-white">
                    <button @click="cartOpen = !cartOpen" class="block lg:inline-block lg:mt-0 lg:ml-2 align-middle text-black hover:text-gray-700 px-2 py-2 mt-1 font-semibold bg-transparent rounded-lg md:mt-0 md:ml-2 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline text-gray-600 focus:outline-none mx-2 sm:mx-0 flex items-center">
                        <ul class="list-none ">
                            <li >
                                <a class="relative flex">
                                    <svg class="flex-1 w-8 h-8 fill-current" viewbox="0 0 24 24">
                                        <path d="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"/>
                                    </svg>
                                    <span id="cart-icon-counter-<%= current_cart.order.token %>" class="absolute right-0 top-0 rounded-full bg-red-600 w-4 h-4 top right p-0 m-0 text-white font-mono text-sm  leading-tight text-center">
                                        <%= current_cart.items_count %>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </button>
                    <div :class="cartOpen ? 'translate-x-0 ease-out' : 'translate-x-full ease-in'" class="overflow-y-auto z-20 max-h-screen fixed right-0 top-0 min-h-screen  max-w-xs w-full px-2 py-4 transition duration-300 transform bg-white border-l-2 border-gray-300">
                        <div class="flex items-center justify-between">
                            <div class="text-center w-full">
                                <h3 class="text-2xl font-medium text-gray-700 ">Your cart</h3>
                            </div>
                            <button @click="cartOpen = !cartOpen" class="text-gray-600 focus:outline-none">
                                <svg class="h-5 w-5" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor"><path d="M6 18L18 6M6 6l12 12"></path></svg>
                            </button>
                        </div>
                        <hr class="my-3">                            
                        <% @items = current_cart.order.items %>
                        <% if @items.count > 0 %>
                        <div id="cart-container-<%= current_cart.order.token %>" class="w-full overflow-x-hidden m-0 h-full min-h-full" >
                            <%= render partial: "shared/cart", locals: {items: @items} %>
                        </div>
                        <% else %>
                            <div id="cart-container-<%= current_cart.order.token %>" class="text-center" >
                                <p>Your cart is empty</p>
                            </div>
                        <% end %>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
