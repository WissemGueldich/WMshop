<!-- component -->
<div class="flex justify-center items-start h-full absolute top-0 w-full mt-7">
    <button type="button" onclick="openModal('mymodalcentered')" class="px-4 py-2 bg-blue-500 text-white rounded mr-3">Open Modal Centered</button>
<button type="button" onclick="openModal('mymodaltop')" class="px-4 py-2 bg-blue-500 text-white rounded">Open Modal Top</button>
</div>


<dialog id="mymodalcentered" class="bg-transparent z-0 relative w-screen h-screen">
    <div class="p-7 flex justify-center items-center fixed left-0 top-0 w-full h-full bg-gray-900 bg-opacity-50 z-50 transition-opacity duration-300 opacity-0">
        <div class="bg-white flex rounded-lg w-1/2 relative">
            <div class="flex flex-col items-start">
                <div class="p-7 flex items-center w-full">
                    <div class="text-gray-900 font-bold text-lg">Modal Centered</div>
                    <svg onclick="modalClose('mymodalcentered')" class="ml-auto fill-current text-gray-700 w-5 h-5 cursor-pointer" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 18">
                        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z" />
                    </svg>
                </div>

                <div class="px-7 overflow-x-hidden overflow-y-auto" style="max-height: 40vh;">
                    <div class="container mx-auto">
						<div class="flex justify-center px-6 my-12">
						  <!-- Row -->
						  <div class="w-full xl:w-3/4 lg:w-11/12 flex">
							<!-- Col -->
							<div
							  class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
							  style="background-image: url('https://source.unsplash.com/K4mSJ7kc0As/600x800')"
							></div>
							<!-- Col -->
							<div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
							  <h3 class="pt-4 text-2xl text-center">Welcome Back!</h3>
							  <%= form_for(@resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							  <div class="px-8 pt-6 pb-8 mb-4 bg-white rounded" >
								<div class="mb-4 mb-4 md:mr-2 md:mb-0 ">
								  <%= f.label :email, class:"block mb-2 text-sm font-bold text-gray-700" %>
								  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"%>
								</div>
								<div class="mb-4">
								  <%= f.label :password, class:"block mb-2 text-sm font-bold text-gray-700"%>
								  <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 rounded shadow appearance-none focus:outline-none focus:shadow-outline"  %><!--#border border-red-500-->
								</div>
								<% if devise_mapping.rememberable? %>
								  <div class="mb-4">
									<%= f.check_box :remember_me, class: "r-2 leading-tight" %>
									<%= f.label :remember_me, class:"text-sm"%>
								  </div>
								<% end %>
								<div class="mb-6 text-center">
									<%= f.submit "Sign in", class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outliney" %>
								</div>
								<hr class="mb-6 border-t" />
								<div class="text-center">
									<%= render "devise/shared/links", class:"inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" %>
								</div>
							  </div>
							  <% end %>
							</div>
						  </div>
						</div>
					  </div>
                </div>
                
                <div class="p-7 flex justify-end items-center w-full">
                    <button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-3">
                        Ok
                    </button>
                    <button type="button" onclick="modalClose('mymodalcentered')" class="bg-transparent hover:bg-gray-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</dialog>

