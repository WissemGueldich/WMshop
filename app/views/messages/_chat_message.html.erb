<% if message.user_id!=current_user.id %>
    <div class="chat bg-white text-gray-700 p-2 self-start my-2 rounded-md shadow mr-3">
        <%= message.content %>
    </div>
<% else %>
    <div class="message bg-blue-500 text-white p-2 self-end my-2 rounded-md shadow ml-3">
        <%= message.content %>
    </div>
<% end %>