<body class="font-mono bg-gray-400">
  <!-- Container -->
  <div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
      <!-- Row -->
      <div class="w-full xl:w-3/4 lg:w-11/12 flex">
        <!-- Col -->
          <div
            class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
            style="background-image: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800')"
          ></div>
        
        <!-- Col -->
        <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
          <h3 class="pt-4 text-2xl text-center">Edit Your Account!</h3>
          <% if resource.avatar.attached? %>
            <div class="pt-4  justify-center   flex ">
              <div class="h-30 w-30 rounded-full border overflow-hidden" >
                <%= image_tag user_avatar(resource,150) %>
              </div>
            </div>
          <% end %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="px-8 pt-6 pb-2 bg-white rounded" >
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-4 md:mr-2 md:mb-0">
              <%= f.label :name,class: "block mb-2 text-sm font-bold text-gray-700" %>
              <%= f.text_field :name, class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4">
              <%= f.label :email,class: "block mb-2 text-sm font-bold text-gray-700" %>
              <%= f.email_field :email, class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4">
              <%= f.label :avatar,class: "block mb-2 text-sm font-bold text-gray-700" %>
              <%= f.file_field :avatar, class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4 md:flex md:justify-between">
              <div class="mb-4 md:mr-2 md:mb-0">
                <%= f.label :password,class: "block mb-2 text-sm font-bold text-gray-700" %>
                <%= f.password_field :password, class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "******************" %>
              </div>
              <div class="md:ml-2">
                <%= f.label :password_confirmation,class: "block mb-2 text-sm font-bold text-gray-700" %>
                <%= f.password_field :password_confirmation, class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "******************" %> 
              </div>
            </div>
            <div class="text-center  mb-2">
              <i class="text-sm text-gray-400">(Leave this blanc if you don't want to change it)</i><br/>
            </div>
            <div class="mb-4">
              <%= f.label :current_password,class: "block mb-2 text-sm font-bold text-gray-700" %>
              <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "******************", class:"w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
              <div class="text-center mt-2 mb-2">
                <i class="text-sm text-gray-400">we need your current password to confirm your changes</i>
              </div>
            </div>
            <div class="mb-6 text-center">
              <%= f.submit "Save Changes", class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
            </div>
            <hr class="mb-3 border-t" />
            
          <% end %>
          <div class="mb-4">
            <div class="mb-4">
              <h3 class="pt-4 text-2xl text-center">Cancel Your Account!</h3>
            </div>
            <div class="mb-4">
              <h3 class="">Unhappy ?</h3>
            </div>
            <div class="mb-4"> 
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "w-full px-4 py-2 font-bold text-white bg-red-500 rounded-full hover:bg-red-700 focus:outline-none focus:shadow-outline" %>
            </div>
            <hr class="mb-6 border-t" />
              <%= link_to "Back", :back, class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>





